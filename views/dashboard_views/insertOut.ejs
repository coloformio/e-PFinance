<div class="container-fluid">
    <div class="row flex-nowrap">

        <!-- SIDEBAR NAV STARTS -->

        <%- include('../partials/dashboard_sidebar'); %>

        <!-- SIDEBAR NAV ENDS -->

        <!-- MAIN SECTION STARTS -->

        <div class="col d-flex flex-column justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-xl-8">
                <div class="text-center">
                    <h3>Inserimento Spese</h3>
                    <p>Compilando i seguenti campi e' possibile inserire le spese</p>
                </div>
                
                <!-- EJS PARTIALS -->
                <%- include('../partials/messages'); %>
                
                <div class="card card-body mt-3">
                    <form action="/api/user/insertOut" method="POST" id="form">
                        <div class="form-class mt-3">
                            <label for="title">Titolo</label>
                            <input 
                                type="text"
                                id="title"
                                name="title"
                                class="form-control"
                                placeholder="Titolo della spesa"
                                value = "<% typeof title != 'undefined' ? title: ''%>"
                                >
                        </div>
                        <div class="form-class mt-3">
                            <label for="description">Breve descrizione della spesa</label>
                            <textarea class="form-control" 
                                id="description"
                                name="description"
                                rows="3"
                                placeholder="Descrizione della spesa (opzionale)"></textarea>
                        </div>
                        <div class="form-class mt-3">
                            <label for="amount">Importo</label>
                            <input 
                                type="number"
                                id="amount"
                                name="amount"
                                class="form-control"
                                placeholder="Importo della spesa"
                                value = "<% typeof amount != 'undefined' ? amount: ''%>"
                                >
                        </div>
                        <div class="form-class mt-3">
                            <label for="date">Data Spesa</label>
                            <input 
                                type="date"
                                id="date"
                                name="date"
                                class="form-control"
                                >
                        </div>
                        <select name="selectedCategory" class="form-select mt-3" aria-label="category-menu">
                            <option selected>Categoria</option>
                            <option value="Cibo">Cibo</option>
                            <option value="Affitto">Affitto</option>
                            <option value="Hobby">Hobby</option>
                            <option value="Uscite Serali">Uscite serali</option>
                            <option value="Salute">Salute</option>
                            <option value="Finanziamenti">Finanziamenti</option>
                            <option value="Altro">Altro</option>
                        </select>
                        <div class="d-grid gap-1 mt-3">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-emoji-frown"></i> Aggiungi
                            </button>
                        </div>
                    </form>
                </div>
            </div>    
        </div>

        <!-- MAIN SECTION ENDS -->
    </div>
</div>

<script>
    const form = document.getElementById('form');
    form.addEventListener('sumbit', (e) => e.preventDefault());
</script>