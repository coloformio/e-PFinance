<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <a href="/">
                    <div class="container text-center">
                        <img src="/loghi/logo1-lgProvaTagliata.png" alt="logo" class="img-fluid m-auto">
                    </div>
                </a>

                <!-- EJS PARTIALS -->
                <%- include('../partials/messages'); %>

                <form action="/api/login" method="POST" id="form">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input 
                        type= "text"
                        id= "username"
                        name= "username"
                        class= "form-control"
                        placeholder= "Inserisci il tuo username"
                        autocomplete= "on"
                        value= "<% typeof username != 'undefined' ? username: ''%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input 
                        type= "password"
                        id= "password"
                        name= "password"
                        class= "form-control"
                        placeholder= "Inserisci la tua password"
                        value= "<% typeof password != 'undefined' ? password: ''%>"
                        />
                    </div>
                    <div class="d-grid gap-1">
                        <button type="submit" class="btn btn-primary btn-block mt-2">
                            Accedi
                        </button>
                    </div>
                </form>
                <p class="lead mt-4">Non hai un account? <a href="/registration">Registrati qui</a></p>
            </div>
        </div>
    </div>
</div>

<script>
    const form = document.getElementById('form');
    form.addEventListener('sumbit', (e) => e.preventDefault());
</script>