<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <a href="/">
                    <div class="container text-center">
                        <img src="/loghi/logo1-lgProvaTagliata.png" alt="logo" class="img-fluid m-auto">
                    </div>
                </a>
                <h1 class="text-center fs-3">Registrazione</h1>
                
                <!-- EJS PARTIALS MESSAGES-->
                <%- include("../partials/messages"); %>

                <form action="/api/registration" method="POST" id="form">
                    <div class="form-group">
                        <label for="name">Nome</label>
                        <input 
                            type="text"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Inserisci il tuo nome"
                            value="<% typeof name != 'undefined' ? name: ''%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="surname">Cognome</label>
                        <input 
                        type="text"
                        id="surname"
                        name="surname"
                        class="form-control"
                        placeholder="Inserisci il tuo cognome"
                        value="<% typeof surname != 'undefined' ? surname: ''%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="username">Username</label>
                        <input 
                        type="text"
                        id="username"
                        name="username"
                        class="form-control"
                        placeholder="Inserisci il tuo username"
                        value="<% typeof username != 'undefined' ? username: ''%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">Email</label>
                        <input 
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Email"
                        value="<% typeof email != 'undefined' ? email: ''%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input 
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Password"
                        value="<% typeof password != 'undefined' ? password: ''%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="password2">Password</label>
                        <input 
                        type="password"
                        id="password2"
                        name="password2"
                        class="form-control"
                        placeholder="Ripeti password"
                        value="<% typeof password2 != 'undefined' ? password2: ''%>"
                        />
                    </div>
                    <div class="d-grid gap-1">
                        <button type="submit" class="btn btn-primary btn-block mt-2">
                            Registrati
                        </button>
                    </div>
                
                </form>
                <p class="lead mt-4">Hai gi√† un account? <a href="/login">Accedi</a></p>
            </div>
        </div>
    </div>
</div>

<script>
    const form = document.getElementById('form');
    form.addEventListener('sumbit', (e) => e.preventDefault());
</script>